<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.codymorrow.cslearner.LanguageChoices.ContextLanguage">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/contextLanguageMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Which language do you feel most comfortable with?"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/contextLanguageSubtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/contextLanguageMessage"
            android:layout_centerHorizontal="true"
            android:text="@string/second_language_selection_hint"
            android:textAppearance="@style/TextAppearance.Design.Hint" />

        <Button
            android:id="@+id/javaButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/cButton"
            android:layout_alignStart="@+id/cButton"
            android:layout_below="@+id/contextLanguageSubtext"
            android:layout_marginTop="21dp"
            android:background="@android:color/holo_red_dark"
            android:onClick="selectContextJava"
            android:text="Java" />

        <Button
            android:id="@+id/cButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/cPlusButton"
            android:layout_alignStart="@+id/cPlusButton"
            android:layout_below="@+id/javaButton"
            android:layout_marginTop="15dp"
            android:background="@android:color/holo_orange_light"
            android:onClick="selectContextC"
            android:text="C" />

        <Button
            android:id="@+id/cPlusButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/pythonButton"
            android:layout_alignStart="@+id/pythonButton"
            android:layout_below="@+id/cButton"
            android:layout_marginTop="12dp"
            android:background="@android:color/holo_orange_dark"
            android:onClick="selectContextCPlus"
            android:text="C++" />

        <Button
            android:id="@+id/pythonButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cPlusButton"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:background="@android:color/holo_green_light"
            android:onClick="selectContextPython"
            android:text="Python" />

        <Button
            android:id="@+id/swiftButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/pythonButton"
            android:layout_alignStart="@+id/pythonButton"
            android:layout_below="@+id/pythonButton"
            android:layout_marginTop="18dp"
            android:background="@android:color/holo_purple"
            android:onClick="selectContextSwift"
            android:text="Swift" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
